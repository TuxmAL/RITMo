<%- model_class = Comune -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:codice) %></th>
      <th><%= model_class.human_attribute_name(:comune) %></th>
      <th><%= model_class.human_attribute_name(:cap) %></th>
      <th><%= model_class.human_attribute_name(:provincia) %></th>
      <th><%= model_class.human_attribute_name(:istat) %></th>
      <th><%= model_class.human_attribute_name(:provincia_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @comuni.each do |comune| %>
      <tr>
        <td><%= link_to comune.id, comune_path(comune) %></td>
        <td><%= comune.codice %></td>
        <td><%= comune.comune %></td>
        <td><%= comune.cap %></td>
        <td><%= comune.provincia %></td>
        <td><%= comune.istat %></td>
        <td><%= comune.provincia_id %></td>
        <td><%=l comune.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      comune_path(comune), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_comune_path(comune), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      comune_path(comune),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_comune_path,
            :class => 'btn btn-primary' %>
