<%- model_class = Comune -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:codice) %>:</strong></dt>
  <dd><%= @comune.codice %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comune) %>:</strong></dt>
  <dd><%= @comune.comune %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cap) %>:</strong></dt>
  <dd><%= @comune.cap %></dd>
  <dt><strong><%= model_class.human_attribute_name(:provincia) %>:</strong></dt>
  <dd><%= @comune.provincia %></dd>
  <dt><strong><%= model_class.human_attribute_name(:istat) %>:</strong></dt>
  <dd><%= @comune.istat %></dd>
  <dt><strong><%= model_class.human_attribute_name(:capoluogo) %>:</strong></dt>
  <dd><%= @comune.capoluogo %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              comuni_path, :class => 'btn btn-default'  %>
<%= link_to raw("#{content_tag('i', '', :class => 'fa fa-edit')} #{t('.edit', :default => t("helpers.links.edit"))}"),
              edit_comune_path(@comune), :class => 'btn btn-default' %>
<%= link_to raw("#{content_tag('i', '', :class => 'fa fa-trash')} #{t('.destroy', :default => t("helpers.links.destroy"))}"),
              comune_path(@comune),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
