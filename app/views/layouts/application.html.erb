  <body>
    <header>
      <%= link_to image_tag('logo_vanvitelli.png', :alt => 'Università degli Studi della Campania Luigi Vanvitelli', :title => 'Università degli studi della Campania Luigi Vanvitelli'), '/index.html', :title => 'Ritorna al portale' %>
        Rilascio Tessere Ministeriali <sub><span class="version">v<%= MYAPP_VERSION %></span></sub>
