            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Tessere<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to raw('<i class="fa fa-id-card-o"></i> Emetti'), tessere_path %></li>
                <li><%= link_to raw('<i class="fa fa-print"></i> Ristampa'), '#' %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to raw('<i class="fa fa-list-alt"></i> Elenco emissioni'), '#' %></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <%= bootstrap_flash %>
          <%= yield %>
        </div>
