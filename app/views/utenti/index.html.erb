<%- model_class = Utente -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="2">User Id</th>
      <th>Nome</th>
      <th align="center">Bloccato</th>
      <th align="center"><%= model_class.human_attribute_name(:amministratore) %></th>
      <th>UID</th>
      <th>Creato</th>
      <th>Ultimo aggiornamento</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @utenti.each do |utente| %>
      <tr>
        <td><%= link_to raw("#{content_tag('i', '', :class => 'fa fa-user-secret fa-2x')}"), utente, :class => 'btn btn-default btn-xs' %></td>
        <td><%= link_to utente.user_name, utente %></td>
        <td><%= utente.name %></td>
        <td align="center"><i class="fa fa-<%= 'un' if utente.attivo %>lock fa-2x"></i></td>
        <td align="center"><i class="fa fa-<%= 'check-' if utente.amministratore %>square-o fa-2x"></i></td>
        <td><%= utente.id %></td>
        <td><%= utente.created_at.strftime('%d/%m/%Y') %></td>
        <td><%= utente.updated_at.strftime('%d/%m/%Y') %></td>
        <td>
          <%= link_to raw("#{content_tag('i', '', :class => 'fa fa-edit')} #{t('.edit', :default => t("helpers.links.edit"))}"),
                      edit_utente_path(utente), :class => 'btn btn-default btn-xs' %>
          <%= link_to raw("#{content_tag('i', '', :class => 'fa fa-trash')} #{t('.destroy', :default => t("helpers.links.destroy"))}"),
                      utente_path(utente),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_utente_path,
            :class => 'btn btn-primary' %>
